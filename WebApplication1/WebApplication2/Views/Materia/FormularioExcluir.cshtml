@using WebApplication2.Models;
@model Materia;
@{
    ViewBag.Titulo = "Excluir";
    ViewBag.Name = "Excluir Disciplina";
}


<p>Você deseja excluir a Disciplina @Model.Name?</p>
<form method="post">
    <input type="hidden" asp-for="Id" readonly="readonly" />
    <button asp-route-id="@Model.Id" asp-controller="Materia" asp-action="btn btn-warning" class="Excluir">Excluir</button>
</form>
<a asp-controller="Materia" asp-action="ListarMaterias"><button class="btn btn-secondary">Cancelar</button></a>
