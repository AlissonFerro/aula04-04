@using WebApplication2.Models;
@model List<Materia>;
@{
    ViewBag.Titulo = "Lista de Disciplinas";
    ViewBag.Name = "Lista de Disciplinas";
}


<a asp-action="Formulario" class="btn btn-secondary mb-2">Adicionar Disciplina</a>

<div>

    <table class="table table-striped">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Professor</th>
            <th>Carga Horaria</th>
            <th>Ação</th>
        </tr>

        @foreach (var disciplina in Model)
        {
            if (disciplina.Ativo == true)
            {

                <tr>
                    <td>@disciplina.Id</td>
                    <td>@disciplina.Name</td>
                    <td>@disciplina.Professor</td>
                    <td>@disciplina.CargaHorario</td>
                    <td>
                        <a asp-route-id="@disciplina.Id" asp-action="Descricao" class="btn btn-secondary"><i class="fa-solid fa-pen"></i> Editar</a>
                        <a asp-route-id="@disciplina.Id" asp-action="FormularioExcluir" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i> Excluir</a>
                    </td>
                </tr>

            }
        }
    </table>
</div>
<a href="/Home/Index"><button class="btn btn-secondary">Voltar</button></a>
