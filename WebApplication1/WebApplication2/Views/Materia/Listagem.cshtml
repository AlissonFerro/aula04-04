@using WebApplication2.Models;
@model List<Materia>;
@{
    ViewBag.Titulo = "Lista de Disciplinas";
    ViewBag.Name = "Lista de Disciplinas";
}


<a asp-action="Formulario"><button class="botaoPadrao">Adicionar Disciplina</button></a>
    @if (TempData.ContainsKey("Alterado"))
    {
        bool valor = (bool)TempData["Alterado"];
        if (valor)
        {
            <p>@TempData["Mensagem"]</p>
        }
    }
<div class="table">

    <table>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Professor</th>
            <th>Carga Horaria</th>
            <th>Ação</th>
        </tr>

        @foreach (var disciplina in Model)
        {
            if (disciplina.Ativo == true)
            {

                <tr>
                    <td>@disciplina.Id</td>
                    <td>@disciplina.Name</td>
                    <td>@disciplina.Professor</td>
                    <td>@disciplina.CargaHorario</td>
                    <td>
                        <a asp-route-id="@disciplina.Id" asp-action="Descricao" class="Editar"><i class="fa-solid fa-pen"></i> Editar</a>
                        <a asp-route-id="@disciplina.Id" asp-action="FormularioExcluir" class="Excluir"><i class="fa-solid fa-trash-can"></i> Excluir</a>
                    </td>
                </tr>

            }
        }
    </table>
</div>
<a href="/Home/Index"><button class="botaoPadrao">Voltar</button></a>
