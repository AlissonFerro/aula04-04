@using WebApplication2.Models;
@model Aluno;
@{
    ViewBag.Titulo = "Excluir";
    ViewBag.Name = "Excluir Aluno";
}

<p>Você deseja excluir o Aluno @Model.Nome?</p>
<form method="post">
    <input type="hidden" asp-for="Id" readonly="readonly" />
    <div class="d-grid gap-2 d-md-block mb-2">
        <button asp-route-id="@Model.Id" asp-action="ExcluirAluno" class="btn btn-danger">Excluir</button>
        <a asp-controller="Home" asp-action="ListarAlunos" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

