@using WebApplication2.Models;
@model List<Aluno>;
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Listagem</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <h1>Controle de Alunos</h1>
    <hr />
    <div class="table">

        <table>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Curso</th>
            </tr>

            @foreach (var alunos in Model)
            {
                <tr>
                    <td>@alunos.Id</td>
                    <td>@alunos.Name</td>
                    <td>@alunos.Curso</td>
                </tr>
            }
        </table>
    </div>
    <a asp-action="Index">Voltar</a>
</body>

</html>
