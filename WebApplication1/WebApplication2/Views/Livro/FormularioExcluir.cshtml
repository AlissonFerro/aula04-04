@using WebApplication2.Models;
@model Livro;
@{
    ViewBag.Titulo = "Excluir";
    ViewBag.Name = "Excluir Disciplina";
}


<p>Você deseja excluir o Livro @Model.Nome?</p>
<form method="post">
    <input type="hidden" asp-for="Id" readonly="readonly" />

    <div class="d-grid gap-2 d-md-block mb-2">
        <button asp-route-id="@Model.Id" asp-controller="Livro" asp-action="Excluir" class="btn btn-danger">Excluir</button>
        <a asp-controller="Livro" asp-action="ListarLivros"><button class="btn btn-secondary">Cancelar</button></a>
    </div>
</form>
