<!DOCTYPE html>
<html>
<head>

    <link rel="stylesheet" href="~/css/styleDisciplina.css" />
    <link rel="stylesheet" href="~/css/style~/css/styleAluno.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>@ViewBag.Titulo</title>
</head>
<body class="container-fluid">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Início</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">

                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="ListarAlunos">Alunos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Materia" asp-action="ListarMaterias">Matérias</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Livro" asp-action="ListarLivros">Livros</a>
                        </li>
                    </ul>

                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
        <h1 class="text-center">@ViewBag.Name</h1>
        <hr />
    </header>

    @RenderBody()

    <footer>
        <div class="card-footer text-muted text-center">
            <p>Meu rodapé</p>
        </div>
    </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>